{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "ES2015",
    "declarationDir": "./types",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}